@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.Ascending)
{
    <th>
        <a href="/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@SortOrderOptions.Descending.ToString()">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-arrow-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.Descending)
{
    <th>
        <a href="/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@SortOrderOptions.Ascending.ToString()">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-arrow-down"></i>
    </th>
}
else
{
    <th>
        <a href="/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@SortOrderOptions.Descending.ToString()">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-arrow-up"></i>
    </th>
}
